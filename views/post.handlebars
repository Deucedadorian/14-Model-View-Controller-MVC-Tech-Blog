<div class="text-center post">
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
</div>

<div> 
  <form class="form new-comment-form">
    <div class="form-group">
      <label for="comment-contents">Leave a comment:</label>
      <textarea class="form-input" id="comment-contents" name="comment-contents"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>
</div>

{{#if comments.length}}
<div class="comment-list">
  <h4>Comments:</h4>

  {{#each comments as |comment| }}
  <div class="row mb-4">
    <div class="col-md-5 comment">
      <p>{{comment.contents}}</p>
      <p>Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}
<script>window.post = {{ id }} </script>
<script src="../js/post.js"></script>