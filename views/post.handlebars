<div class="text-center post">
  <h2>{{title}}</h2>
  <p>{{contents}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
</div>

<div class="center">
  <form class="form new-post-form">
    <div class="form-group">
      <label for="post-contents">Leave a comment:</label>
      <textarea class="form-input" id="post-contents" name="post-contents"></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>
  </form>
</div>

{{#each comments as |comment| }}
<div class="row mb-4" style="border: 3px;">
  <div class="col-md-5 comment">
    <p>{{comment.contents}}</p>
    <p>Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
  </div>
</div>
{{/each}}
