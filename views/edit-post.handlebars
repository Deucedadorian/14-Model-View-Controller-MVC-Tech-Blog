<form class="form update-post-form">
    <div class="form-group">
        <label for="post-title">Post Title</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}"/>
    </div>
    <div class="form-group">
        <label for="post-contents">Post Contents:</label>
        <textarea class="form-input" id="post-contents" name="post-contents">{{contents}}</textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{id}}">SUBMIT</button>
        <button class="btn btn-danger delete" data-id="{{id}}">DELETE</button>
    </div>
</form>

<script src="../js/postUpdate.js"></script>